{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "exec-game-use",
          "cmd": "cmd.exe",
          "args": [
            "/C",
            "start",
            {
              "validator": ".*"
            }
          ],
          "sidecar": false
        }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "scope": {
        "allow": ["**"]
      }
    },
    "fs:allow-app-read-recursive",
    "dialog:default",
    "fs:default",
    "os:default"
  ]
}