{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "exec-game-use",
          "cmd": "cmd.exe",
          "args": [
            "/C",
            "start",
            "",
            {
              "validator": ".*"
            }
          ],
          "sidecar": false
        }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "scope": {
        "allow": [
          "**"
        ]
      }
    },
    {
      "identifier": "fs:allow-copy-file",
      "scope": {
        "allow": [
          {
            "path": "**",
            "baseDir": "Any"
          },
          {
            "path": "$APPDATA/**",
            "baseDir": "Any"
          }
        ]
      }
    },
    {
      "identifier": "fs:allow-mkdir",
      "scope": {
        "allow": [
          "$APPDATA/icons"
        ]
      }
    },
    "fs:allow-create",
    "fs:allow-app-read-recursive",
    "dialog:default",
    "fs:default",
    {
      "identifier": "clipboard-manager:default",
      "allow": [
        "clipboard-manager:allow-read-image"
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "scope": {
        "allow": [
          "$APPDATA/*"
        ]
      }
    },
    {
      "identifier": "opener:allow-open-path",
      "scope": {
        "allow": [
          {
            "path": "$APPDATA/backups"
          },
          {
            "path": "$APPDATA/backups/*"
          }
        ]
      }
    },
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "/**"
        }
      ]
    },
    "os:default",
    "clipboard-manager:allow-read-image"
  ]
}