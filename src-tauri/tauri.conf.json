{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RVNLauncher",
  "version": "0.6.2",
  "identifier": "dev.revenger.RVNLauncher",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "RVN Launcher",
        "width": 1280,   
        "height": 720,
        "minWidth": 720, 
        "minHeight": 480
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["$APPDATA/**"]
        }
        
      },
      "capabilities": [
        "default"
      ]
  }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/48x48.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ]
  }
}
